#include <iostream>
#include <opencv2/opencv.hpp>

using namespace std;

int main(int argc, char **argv) {
    if (argc != 2)  {
        cerr << "Please input arguments!" << endl;
        exit(1);
    }

    cv::Mat image = cv::imread(argv[1]);


    while (true)  {
        char c = cv::waitKey();
        if (c == 27)  {
            break;
        }
    }
    return 0;    
}
